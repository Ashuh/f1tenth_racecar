<launch>
    <arg name="circle_offsets" value="[0.1, 0.3]" />
    <arg name="circle_radius" value="0.2" />

    <arg name="lattice_num_layers" value="8" />
    <arg name="lattice_num_lateral_samples_per_side" value="8" />
    <arg name="lattice_layer_spacing" value="2.0" />
    <arg name="lattice_lateral_spacing" value="0.05" />
    <arg name="lattice_k_length" value="0.5" />

    <arg name="ref_max_speed" value="5.0" />
    <arg name="ref_max_lat_acc" value="1.0" />
    <arg name="ref_max_lon_acc" value="1.0" />
    <arg name="ref_max_lon_dec" value="1.0" />

    <arg name="track_num_paths" value="9" />
    <arg name="wheelbase" value="0.3" />
    <arg name="max_steering_angle" value="0.4" />
    <arg name="track_path_lateral_spacing" value="0.06" />
    <arg name="track_look_ahead_time" value="0.5" />

    <arg name="costmap_topic" value="costmap" />
    <arg name="global_path_topic" value="path/global" />
    <arg name="local_path_topic" value="path/local" />
    <arg name="odom_topic" value="odom" />
    <arg name="inflated_costmap_topic" value="inflated_costmap" />
    <arg name="viz_topic" value="viz/local_planner" />

    <node name="local_planner" pkg="local_planner" type="local_planner_node" output="screen">
        <rosparam param="circle_offsets" subst_value="True">$(arg circle_offsets)</rosparam>
        <param name="circle_radius" value="$(arg circle_radius)" />

        <param name="lattice_num_layers" value="$(arg lattice_num_layers)" />
        <param name="lattice_num_lateral_samples_per_side" value="$(arg lattice_num_lateral_samples_per_side)" />
        <param name="lattice_layer_spacing" value="$(arg lattice_layer_spacing)" />
        <param name="lattice_lateral_spacing" value="$(arg lattice_lateral_spacing)" />
        <param name="lattice_k_length" value="$(arg lattice_k_length)" />

        <param name="ref_max_speed" value="$(arg ref_max_speed)" />
        <param name="ref_max_lat_acc" value="$(arg ref_max_lat_acc)" />
        <param name="ref_max_lon_acc" value="$(arg ref_max_lon_acc)" />
        <param name="ref_max_lon_dec" value="$(arg ref_max_lon_dec)" />

        <param name="track_num_paths" value="$(arg track_num_paths)" />
        <param name="wheelbase" value="$(arg wheelbase)" />
        <param name="max_steering_angle" value="$(arg max_steering_angle)" />
        <param name="track_path_lateral_spacing" value="$(arg track_path_lateral_spacing)" />
        <param name="track_look_ahead_time" value="$(arg track_look_ahead_time)" />

        <param name="costmap_topic" value="$(arg costmap_topic)" />
        <param name="global_path_topic" value="$(arg global_path_topic)" />
        <param name="local_path_topic" value="$(arg local_path_topic)" />
        <param name="odom_topic" value="$(arg odom_topic)" />
        <param name="inflated_costmap_topic" value="$(arg inflated_costmap_topic)" />
        <param name="viz_topic" value="$(arg viz_topic)" />
    </node>
</launch>
