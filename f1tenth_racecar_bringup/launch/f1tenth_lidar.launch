<launch>
  <arg name="lidar_frame" default="laser"/>

  <node name="rplidarNode" pkg="rplidar_ros" type="rplidarNode" output="screen">
    <param name="serial_port" type="string" value="/dev/sensors/rplidar"/>
    <param name="serial_baudrate" type="int" value="256000"/>
    <!--A3 -->
    <param name="frame_id" type="string" value="$(arg lidar_frame)"/>
    <param name="inverted" type="bool" value="false"/>
    <param name="angle_compensate" type="bool" value="true"/>
    <param name="scan_mode" type="string" value="Sensitivity"/>
  </node>

  <node pkg="tf" type="static_transform_publisher" name="rplidar_broadcaster" args="0.3 0 0.1 3.14 0 0 base_link $(arg lidar_frame) 100" />
</launch>
