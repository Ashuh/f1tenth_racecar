<launch>
  <rosparam command="load" file="$(find f1tenth_racecar_bringup)/config/vehicle_params.yaml"/>

  <include file="$(find f1tenth_racecar_bringup)/launch/joy.launch">
  </include>

  <include file="$(find f1tenth_racecar_bringup)/launch/autonomy.launch">
    <arg name="map_name" value="berlin"/>
    <arg name="path_name" value="berlin"/>
  </include>

  <node pkg="f1tenth_simulator" name="f1tenth_simulator" type="simulator" output="screen">
    <rosparam command="load" file="$(find f1tenth_racecar_bringup)/config/simulator.yaml"/>
    <remap from="drive" to="drive_safe"/>
  </node>

  <include file="$(find f1tenth_simulator)/launch/racecar_model.launch"/>

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find f1tenth_racecar_bringup)/rviz/f1tenth_racecar.rviz" output="screen"/>
</launch>
